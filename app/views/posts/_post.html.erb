<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Image:</strong>
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "img-fluid" %>
    <% else %>
      No image attached.
    <% end %>
  </p>
  <% if local_assigns[:show_description] != false %>
    <p>
      <strong>Description:</strong>
      <%= post.description %>
    </p>
  <% end %>
</div>
