<h1>Noticias</h1>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to "Crear Noticia", new_post_path, class: "btn btn-primary" %>
  <% end %>
<% end %>
<div id="posts" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
  <% @posts.each do |post| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-2"><%= post.title %></h5>
          <div class="text-center mb-3">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "img-fluid", style: "max-height: 200px; width: 100%;" %>
            <% end %>
          </div>
          <div class="text-center">
            <%= link_to "Ver Noticia...", post, class: "btn" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
